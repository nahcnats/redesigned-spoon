import { Icon } from "astro-icon";

const menus = [
    {
        name: "ABOUT",
        url: "/#about",
        // icon: faHome,
        icon: "ant-design:home-outlined",
    },
    {
        name: "WORK",
        url: "/#work",
        // icon: faCode,
        icon: "ant-design:code-outlined",
    },
    {
        name: "CONTACT",
        url: "/#contact",
        // icon: faTeletype,
        icon: "iconoir:telegram",
    },
];

const astroPath = new URL(Astro.url).pathname;
---

<header class="top-0 sticky z-50 bg-gray-800 mb-12">
    <div class="flex justify-between items-center p-5 h-20">
        <div>
            <a href="/" class="text-xl font-[600] tracking-wider">nahcnats</a>
        </div>
        <nav>
            <ul class="flex gap-6 items-center">
                {
                    menus.map((item) => (
                        <li class="links">
                            <a href={item.url}>
                                <span class="block md:hidden">
                                    <Icon name={item.icon} size={24} />
                                </span>
                                <span class="hidden md:block">{item.name}</span>
                            </a>
                        </li>
                    ))
                }
                <!-- <NavLinkWrapper
                    items={menus}
                    astroPath={astroPath}
                    client:load
                /> -->
            </ul>
        </nav>
    </div>
</header>

<style>
    .links {
        @apply font-[500];
    }
    nav li a {
        @apply flex hover:text-amber-500;
    }
</style>
