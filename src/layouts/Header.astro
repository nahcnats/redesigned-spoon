---
import { faHome, faCode, faTeletype } from "@fortawesome/free-solid-svg-icons";
import NavLinkWrapper from "../components/NavLinkWrapper.jsx";

const menus = [
    {
        name: "HOME",
        url: "/",
        icon: faHome,
    },
    {
        name: "WORK",
        url: "/#work",
        icon: faCode,
    },
    {
        name: "CONTACT",
        url: "/#contact",
        icon: faTeletype,
    },
];

const astroPath = new URL(Astro.url).pathname;
---

<header class="top-0 sticky z-50 bg-gray-800 mb-12">
    <div class="flex justify-between items-center p-5 h-20">
        <div>
            <span class="text-xl font-[600] tracking-wider">nahcnats</span>
        </div>
        <nav>
            <ul class="flex gap-4 items-center">
                <NavLinkWrapper
                    items={menus}
                    astroPath={astroPath}
                    client:load
                />
            </ul>
        </nav>
    </div>
</header>
