---
import Header from "./Header.astro";
import "../styles/global.css";

export interface LayoutProps {
    title?: string;
}

const { title } = Astro.props as LayoutProps;
const siteName = "nahcnats";
const astroPath = new URL(Astro.url).pathname;
---

<meta charset="utf-8" />
<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
<meta name="viewport" content="width=device-width" />
<meta name="generator" content={Astro.generator} />
<link rel="preconnect" href="https://fonts.googleapis.com" />
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
<link
    href="https://fonts.googleapis.com/css?family=Poppins|Roboto:300,400,500,700&display=swap"
    rel="stylesheet"
/>
<title>
    {title ? `${title} - ${siteName}` : siteName}
</title>

<body class="flex flex-col justify-between h-full w-screen">
    <Header />
