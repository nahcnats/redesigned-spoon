---
import ContactForm from "../components/ContactForm.jsx";
import SectionTitle from "../components/SectionTitle.astro";
import { Icon } from "astro-icon";
---

<footer class="w-full flex justify-center items-center">
    <section id="contact" class="container w-full justify-center p-4">
        <SectionTitle title="Contact Me" />
        <div class="grid grid-cols-1 md:grid-cols-3">
            <div class="flex flex-col mb-6 md:mb-0">
                <div class="mb-4">For further enquiries.</div>
                <div class="flex flex-row gap-2 items-center mb-2 ml-2">
                    <Icon
                        name="ic:baseline-alternate-email"
                        size={16}
                    />nahcnats@gmail.com
                </div>
                <div class="flex flex-row gap-2 items-center mb-2 ml-2">
                    <Icon name="akar-icons:whatsapp-fill" size={16} />+(60)12
                    395 7358
                </div>
                <div class="flex flex-row gap-2 items-center ml-2">
                    <Icon name="akar-icons:github-fill" size={16} /><a
                        href="https://github.com/nahcnats"
                        class="hover:underline">github.com/nahcnats</a
                    >
                </div>
            </div>
            <div class="flex flex-col items-center col-span-2">
                <ContactForm client:load />
            </div>
        </div>
    </section>
</footer>
