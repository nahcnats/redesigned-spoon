---
const menus = [
    {
        name: "WORK",
        url: "/",
    },
    {
        name: "ABOUT",
        url: "/about",
    },
];

const pathname = new URL(Astro.request.url).pathname;
---

<header class="flex justify-between items-center p-5">
    <div>
        <span class="text-xl font-[600] tracking-wider">nahcnats</span>
    </div>
    <nav>
        <ul class="flex gap-4 items-center">
            {
                menus.map((item) => (
                    <li>
                        <a
                            href={item.url}
                            class={`font-[500] hover:text-amber-500 ${
                                pathname === item.url && "text-lg text-gray-500"
                            }`}
                        >
                            {item.name}
                        </a>
                    </li>
                ))
            }
        </ul>
    </nav>
</header>
