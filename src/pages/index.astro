---
import Layout from "../layouts/Layout.astro";
import Work from "../components/Work.astro";
import {AiOutlineCloudDownload} from 'react-icons/ai'
---

<Layout>
    <div class="container mx-auto px-4">
        <Work />

        <section id="about" class="mb-12">
            <div>
                <div class="flex items-center mb-4">
                    <div class="w-1 bg-amber-500 h-4 mr-2"></div><h1
                        class="text-xl"
                    >
                        About me
                    </h1>
                </div>
                <p>
                    My name is Stanley Chan. I am a programmer from Malaysia with focus on ReactJS, React Native, NodeJS and ExpressJs. I am mostly self-taught and have been active since 2018.
                </p>
                <button class="bg-amber-500 p-2 rounded-lg mt-6 text-white flex gap-2"><AiOutlineCloudDownload size={24} /> Resume</button>
            </div>
        </section>
    </div>
</Layout>
